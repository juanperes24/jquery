	});
});

$("#dialog").dialog({
	autoOpen: false,
	modal: true,
	buttons: {
		"Aceptar": function () {
			var texto1 = document.getElementById('nombre').firstChild;
			var newText1 = document.createTextNode(el_nombre.value);
			texto1.parentNode.replaceChild(newText1, texto1);

